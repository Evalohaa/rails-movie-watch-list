<div class="container">
  <div class= "d-flex justify-content-between">
    <h1><%= @list.name %></h1>
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-flat" %>
  </div>
  <div class="row d-flex">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-12 col-sm-6 mb-3 movie-card">
        <div class="movie-card">
          <%= image_tag bookmark.movie.poster_url, class: "movie-image" %>
          <div class="text-card">
            <%= bookmark.movie.title %>
            <%= bookmark.movie.overview %>
            <%= link_to 'Delete',
                            list_bookmark_path(@list),
                            method: :delete,
                            data: { confirm: "Are you sure?" }, class: "text-decoration-none" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Back to lists", lists_path, class: "btn btn-flat" %>
</div>
