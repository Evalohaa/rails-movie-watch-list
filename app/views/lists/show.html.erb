<div class="container">
  <div class= "d-flex justify-content-between">
    <h1><%= @list.name %></h1>
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-flat" %>
  </div>
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-12 col-sm-6 mb-3">
        <ul>
          <li><%= bookmark.movie.title %></li>
          <li><%= bookmark.movie.overview %></li>
        </ul>
        <%= link_to 'Delete',
                        list_bookmark_path(@list),
                        method: :delete,
                        data: { confirm: "Are you sure?" }, class: "text-decoration-none" %>
      </div>
    <% end %>
  </div>
  <%= link_to "Back to lists", lists_path, class: "btn btn-flat" %>
</div>
